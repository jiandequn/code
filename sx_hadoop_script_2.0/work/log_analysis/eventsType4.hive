insert overwrite table ott_album_play_log_tmp
select parent_column_id,sn as user_id,collect_set(area_code)[0] as area_code,param['albumId'] as album_id,param['videoId'] as video_id,concat_ws(',', collect_set(concat(unix_timestamp(create_time),'_',if(param['directPlay'] is null,-1,param['directPlay']),'-',if(param['timePosition']=='0',0,1)))) as tdata
where events_type='COLUMN_TYPE_HISTORY_POINT' and param['operateType']='add' and user_type='OTT' group by 1,2,4,5;

