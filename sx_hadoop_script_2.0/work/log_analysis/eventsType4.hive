 select parent_column_id,sn as user_id,user_type,area_code,param['albumId'] as album_id,param['videoId'] as video_id,param['directPlay'] directPlay,param['timePosition'] as duration,create_time,y,m,d
 from events_type_log where events_type='COLUMN_TYPE_HISTORY_POINT' and param['operateType']='add' and user_type='VOD' and concat(y,'-',m,'-',d)>='${startDate}' and concat(y,'-',m,'-',d)<'${endDate}'
 union all
  select parent_column_id,user_id,'OTT' as user_type,area_code,album_id,video_id,directPlay,duration,create_time,substr(create_time,1,4) y,substr(create_time,6,2) m,substr(create_time,9,2) as d from(
